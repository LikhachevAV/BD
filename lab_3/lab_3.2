##3. Вывести список тест-кейсов, у которых > 5 шагов по возростанию кол-ва шагов.

SELECT test_case.test_case_id, test_case.test_case_description, step_and_count.test_step_count
FROM
  (SELECT test_case_step.test_case_id, COUNT(test_case_step.test_case_id) AS test_step_count 
   FROM
     test_case_step INNER JOIN test_case ON test_case.test_case_id = test_case_step.test_case_id
    GROUP BY test_case_step.test_case_id
   ) step_and_count
   INNER JOIN test_case ON step_and_count.test_case_id = test_case.test_case_id
WHERE
  step_and_count.test_step_count >= 5;